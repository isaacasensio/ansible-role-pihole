[Unit]
Description=pi-hole
Requires=docker.service
After=docker.service

[Service]
Restart=always
User={{ pihole_container_user }}
Group=docker
WorkingDirectory=/etc/pi-hole
ExecStartPre=/usr/local/bin/docker-compose -f /etc/pi-hole/docker-compose.yml down
ExecStart=/usr/local/bin/docker-compose -f /etc/pi-hole/docker-compose.yml up
ExecStop=/usr/local/bin/docker-compose -f /etc/pi-hole/docker-compose.yml down

[Install]
WantedBy=multi-user.target